{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "src/**/__tests__/**",
    "jest.config.js"
  ]
}
