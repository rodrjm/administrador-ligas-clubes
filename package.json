{
  "name": "administrador-ligas-clubes",
  "version": "1.0.0",
  "description": "Aplicación full-stack para gestión de partidos deportivos en tiempo real",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:generate": "cd backend && npx prisma generate",
    "db:studio": "cd backend && npx prisma studio",
    "db:reset": "cd backend && npx prisma migrate reset"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "sports",
    "leagues",
    "clubs",
    "matches",
    "realtime",
    "websockets",
    "react",
    "nodejs",
    "typescript"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/administrador-ligas-clubes.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/administrador-ligas-clubes/issues"
  },
  "homepage": "https://github.com/tu-usuario/administrador-ligas-clubes#readme"
}
